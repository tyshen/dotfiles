    logl = log --oneline --pretty='format:%C(yellow) %h%d %Cred%cn %Creset%cd %Cred%m%Creset %s%Creset' --date=short
    ls = ls-files
    sbr = show-branch
    difft= difftool
    diffw= diff --word-diff
    fdiff = diff --name-status
